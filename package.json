{
  "name": "agent-dna",
  "displayName": "AgentDNA",
  "description": "Sync your AI agent's DNA across projects - share AGENT.md rules via GitHub",
  "version": "0.2.0",
  "publisher": "HaizhouWang",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhoushanghai/AgentDNA.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentDna.sync",
        "title": "AgentDNA: Pull (Sync from Global)"
      },
      {
        "command": "agentDna.publish",
        "title": "AgentDNA: Push (Sync to Global)"
      },
      {
        "command": "agentDna.forcePublish",
        "title": "AgentDNA: Force Push (Overwrite Remote)"
      },
      {
        "command": "agentDna.setup",
        "title": "AgentDNA: Settings"
      }
    ],
    "configuration": {
      "title": "AgentDNA",
      "properties": {
        "agentDna.repoUrl": {
          "type": "string",
          "default": "",
          "description": "GitHub repository URL for agent rules (e.g., https://github.com/user/rules.git)"
        },
        "agentDna.syncRules": {
          "type": "boolean",
          "default": true,
          "description": "Enable synchronizing the GEMINI.md Rules file."
        },
        "agentDna.syncWorkflows": {
          "type": "boolean",
          "default": true,
          "description": "Enable synchronizing the global Workflows directory."
        },
        "agentDna.syncSkills": {
          "type": "boolean",
          "default": true,
          "description": "Enable synchronizing the global Skills directory."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  }
}