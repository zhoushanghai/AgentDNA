{
  "name": "agent-dna",
  "displayName": "AgentDNA",
  "description": "Sync your AI agent's DNA across projects - share AGENT.md rules via GitHub",
  "version": "0.1.0",
  "publisher": "HaizhouWang",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentDna.sync",
        "title": "AgentDNA: Sync (Pull)"
      },
      {
        "command": "agentDna.publish",
        "title": "AgentDNA: Publish (Push)"
      },
      {
        "command": "agentDna.syncToLocalProjects",
        "title": "AgentDNA: Sync Local Projects"
      },
      {
        "command": "agentDna.quickSetup",
        "title": "AgentDNA: Quick Setup"
      }
    ],
    "configuration": {
      "title": "AgentDNA",
      "properties": {
        "agentDna.repoUrl": {
          "type": "string",
          "default": "",
          "description": "GitHub repository URL for agent rules (e.g., https://github.com/user/rules.git)"
        },
        "agentDna.includeInGit": {
          "type": "boolean",
          "default": false,
          "description": "Whether to include AGENT.md in Git version control. If false (default), it will be added to .gitignore."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  }
}